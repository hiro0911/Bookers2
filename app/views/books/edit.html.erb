<div class="body">
      <div class="container">

        <p id="notice"></p>


        <div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Editing Book</h1>

<%= form_for @book, html: { class: 'edit_book'} do |f| %>
      <% if @book.errors.any? %>
    
      <h2><%= @book.errors.count %>件のエラーが発生しました</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
  <div class="field row">
    <%= f.label :title, "Title"%>
    <%= f.text_field :title, :class => 'col-xs-12 book_title' %>
  </div>
  <div class="field row">
    <%= f.label :body, "Opinion"%>
    <%= f.text_area :body, :class => 'col-xs-12 book_body' %>
  </div>
  <div class="actions row">
    <%= f.submit :class => 'btn btn-primary col-xs-12' %>
  </div>
  <% end %>
  <%= link_to "Show", "/books/show" %>
  <%= link_to "Back", "/books/index" %>
</div>
<div class="col-md-3"></div>
</div></div>